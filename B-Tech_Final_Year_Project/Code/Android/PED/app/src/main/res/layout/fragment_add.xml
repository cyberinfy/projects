<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.nriit.ped.UpdateFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/alabel_input_word"
            android:layout_width="match_parent"
            android:gravity="center"

            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/ainputWord"
                android:inputType="textNoSuggestions"
                android:layout_width="match_parent"
                android:gravity="center"

                android:layout_height="wrap_content"
                android:layout_below="@+id/alabel_input_word"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="Word" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/alabel_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alabel_input_word">

            <EditText

                android:id="@+id/atype"
                android:inputType="textNoSuggestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alabel_input_type"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="Type" />
        </android.support.design.widget.TextInputLayout>

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_below="@+id/alabel_type"
            android:layout_height="0dp"
            android:layout_weight="6.14">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/alabel_definition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText

                    android:id="@+id/adefinition"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/alabel_input_type"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:hint="Definition" />
            </android.support.design.widget.TextInputLayout>
        </FrameLayout>
        <FrameLayout

            android:id="@+id/content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/addBtn"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="17dp"
                    android:background="#517abd"
                    android:text="Add"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>


</FrameLayout>
